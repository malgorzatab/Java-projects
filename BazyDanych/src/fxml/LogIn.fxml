<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="borderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onKeyPressed="#handleEscPressed" onKeyReleased="#handleEscReleased" prefHeight="525.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LogInController">
    <center>
        <VBox alignment="CENTER" spacing="25.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Label text="Username">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="usernameInput" promptText="username" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="24.0">
                    <children>
                        <Label text="Password">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <PasswordField fx:id="passwordInput" promptText="password" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="20.0">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                    <children>
                        <Button fx:id="signInButton" alignment="CENTER" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#handleSignInEvent" text="Sign in">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                        <Button fx:id="signUpButton" alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#handleSignUpEvent" text="Sign up">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                    </children>
                    <padding>
                        <Insets left="85.0" />
                    </padding>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
        </VBox>
    </center>
    <opaqueInsets>
        <Insets />
    </opaqueInsets>
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
    <top>
        <AnchorPane BorderPane.alignment="CENTER">
            <children>
                <Label alignment="TOP_CENTER" text="Hello! Sign in or sign up!" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </top>
    <bottom>
        <Label fx:id="error" text="" textFill="#a43131" underline="true" BorderPane.alignment="BASELINE_LEFT" />
    </bottom>
</BorderPane>
